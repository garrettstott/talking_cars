<div class='twelve columns'>
  <div class='six columns offset-by-three'>
    <h3 class='center'>Contact Us</h3>
    <%= form_tag(contact_us_mailer_path) do %>
      <%= text_field_tag :name, nil, placeholder: 'Name', required: true %>
      <%= email_field_tag :email, nil, placeholder: 'Email', required: true %>
      <%= text_field_tag :reason, nil, placeholder: 'Reason For Contact', required: true %>
      <%= text_area_tag :message, nil, placeholder: 'Message', required: true, class: 'large-textarea' %>
      <%= button_tag 'Send', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending"} %>
      <%= link_to 'Back', :back, class: 'button btn right' %>
    <% end %>
  </div>
</div>
