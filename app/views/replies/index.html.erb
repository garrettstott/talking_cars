<div class='twelve columns'>
  <div class='center margin-bottom-lg'>
    <h1>
      <%= link_to @make.name, models_path(@make.name), class: 'normalize-link' %>
      <%= link_to @model.name, forums_path(@make.name, @model.name), class: 'normalize-link' %>
    </h1>
    <h3>
      <%= link_to @forum.name, posts_path(@make.name, @model.name, @forum.name), class: 'normalize-link' %>
      <%= link_to favorite_post_path(@post), method: :post do %>
        <% if @favorite %>
          <i class='fa fa-heart red-text'></i>
        <% else %>
          <i class='fa fa-heart'></i>
        <% end %>
      <% end %>
    </h3>
    <span><%= @forum.category %> Forums</span>
  </div>

  <div class='twelve columns'>
    <div class='ten columns offset-by-one'>
      <h3><%= @post.subject %></h4>
      <p><%= @post.body %></p>
      <%= link_to @post.user.username, user_show_path(@post.user.username) %><span class='right'><%= time_ago_in_words(@post.created_at) %></span>
      <hr>
    </div>

  <div class='twelve columns'>
    <% @replies.each do |reply| %>
      <div class='eight columns offset-by-two'>
        <div class='twelve columns'>
          <h6><%= reply.body %></h6>
          by: <%= link_to reply.user.username, user_show_path(reply.user.username) %>
          <span class='right'><%= time_ago_in_words(reply.created_at) %> ago</span>
        </div>
        <div class='twelve columns'>
          <hr>
        </div>
      </div>
    <% end %>
  </div>

  <div class='twelve columns center margin-top-lg'>
    <% if signed_in? %>
      <button id='new-reply-btn' class='btn'>Reply</button>
    <% else %>
      <%= link_to 'Log In To Reply', new_user_session_path(return_url: request.path), class: 'btn button' %>
    <% end %>
  </div>

  <div class='six columns offset-by-three new-post-container'>
    <%= form_for(@new_reply) do |f| %>
      <h3 class='center'>Reply</h3>
      <%= f.text_area :body, placeholder: 'Message' %>
      <%= f.submit 'Submit', data: {disable_with: 'Saving...'} %>
      <span id='cancel-new-reply' class='btn button btn-danger'>Cancel</span>
    <% end %>
  </div>
</div>
