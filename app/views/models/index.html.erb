<div class='twelve columns center'>
  <h1 class='title'>
    <%= @make.name %>
    <%= link_to favorite_make_path(@make), method: :post, title: "Favorite #{@make.name}" do %>
      <% if @favorite %>
        <i class='fa fa-star red-link'></i>
      <% else %>
        <i class='fa fa-star empty-star'></i>
      <% end %>
    <% end %>
  </h1>

  <div class='twelve columns'>
    <% @models.each do |model| %>
      <div class='four columns'>
        <h4><%= link_to model.name, forums_path(@make.name, model.name) %></h4>
      </div>
    <% end %>
  </div>
</div>
