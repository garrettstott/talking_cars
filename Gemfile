gem 'mailboxer'
gem 'rspec'
gem 'font-awesome-rails'
gem 'httparty'
gem 'tinymce-rails'
gem 'sweetalert-rails'
gem 'sweet-alert-confirm'
gem 'will_paginate'
gem 'friendly_id'

group :development, :test do
  gem 'awesome_print'
  gem 'pry'
  gem 'dotenv-rails'
  gem 'letter_opener'
end

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'web-console', '>= 3.3.0'
  gem 'listen', '~> 3.0.5'
